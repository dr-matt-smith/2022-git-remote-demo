{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
    {% if app.user %}

    {% else %}
        <h1>Please Log in to Order<br>
    {% endif %}
    {% if is_granted('ROLE_CUSTOMER') %}
    <div class="container">
        <div class="row mt-3 mb-4">
            <div class="col-md-4">
                <img src="{{ asset('img/chips.jpg') }}" alt="{{ product.name }}" class="img-fluid">
            </div>
            <div class="col-md-8">
                <h1 class="mt-4 mt-md-0">{{ product.name }}</h1>
                <h2>{{ product.price }} â‚¬</h2>
                <hr>
                <b>Description: </b>{{ product.description }}


                <form class="mt-4 p-4 bg-light" method="post">
                    <div class="form-group">
                    </div>
                    <a href="{{ path('addtobasket', {id: product.id}) }}" class="btn btn-dark">
                        Add to Cart
                    </a>
                </form>
            </div>
        </div>
    </div>
    {% endif %}

{% endblock %}