{% extends 'base.html.twig' %}

{% block title %}Table index{% endblock %}

{% block body %}
    <h1>Waiter Reservation Area</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Table Number</th>
                <th>Table Status</th>
                <th>Table Capacity</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
        {% for table in tables %}
            <tr>
                <td>{{ table.id }}</td>
                <td>{{ table.statusType }}</td>
                <td>{{ table.TableCapacity }}</td>
                <td>
                    <a href="{{ path('table_edit', {'id': table.id}) }}">Edit Table {{ table.id }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('table_new') }}">Create new</a>
{% endblock %}
