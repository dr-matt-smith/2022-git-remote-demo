<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
{% block header%}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="{{ path('default') }}">Bia Maith</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="{{ path('product_index') }}">Menu</a>
            </li>
            {% if is_granted('ROLE_WAITER') or is_granted('ROLE_ADMIN') or is_granted('ROLE_MANAGER') %}
            <li class="nav-item">
                <a class="nav-link" href="{{ path('table_index') }}">Table Service</a>
            </li>
            {% endif %}
            <li class="nav-item">
                <a class="nav-link" href="{{ path('aboutus') }}">About Us</a>
            </li>
            <li class="nav-item">
                {% if app.user %}
                    <a class="nav-link" href="{{ path('app_logout') }}">Logged in as {{ app.user.username }}, Logout</a>
                {% else %}
                    <a class="nav-link" href="{{ path('app_login') }}">Log In</a>
                {%  endif %}
            </li>
            <li class="nav-item">
                {% if app.user %}
                {% else %}
                    <a class="nav-link"  href="{{ path('user_new') }}">Register</a>
                {%  endif %}
            </li>
        </ul>
    </div>
</nav>
{% endblock header %}


{% block body %}

{% endblock body %}